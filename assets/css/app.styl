@import "resets"
@import "colors"
@import "mixins"
@import "nav"
@import "landing"

/*===========================

 Fonts
 
============================*/
@font-face
  font-family OpenSansCondensed
  font-style normal
  src url(/fonts/OpenSansCondensed.eot)
  src url(/fonts/OpenSansCondensed.eot?#iefix) format("embedded-opentype"),
      url(/fonts/OpenSansCondensed.woff) format("woff"),
      url(/fonts/OpenSansCondensed.woff2) format("woff2"),
      url(/fonts/OpenSansCondensed.ttf) format("truetype")

/*===========================
 
 Primary
 
============================*/
*, *::after, *::before
  box-sizing: border-box

html, body
  width: 100%
  height: 100%
  font-size: 100%
  overflow: hidden

body
  font-family: OpenSansCondensed, sans-serif
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  line-height: 1.125rem
  color: $black
  background-color: $grey-900

a
  text-transform: uppercase
  color: $blue-100
  -webkit-text-decoration: underline solid $blue-100
  text-decoration: underline solid $blue-100
  animation(250ms, 0ms)
  &:hover
    color: $blue-300
    -webkit-text-decoration: underline solid $blue-300
    text-decoration: underline solid $blue-300

.btn
  display: inline-block
  text-transform: uppercase
  -webkit-text-decoration: none
  text-decoration: none
  padding: .5rem 1rem
  border-radius: 5px
  animation(250ms, 0ms)
  cursor: pointer
  &.bg-navy
    color: white
    background-color: $blue-100
    box-shadow(0, 1px, 4px, $blue-0)
  &.bg-blue
    color: white
    background-color: $blue-300
    box-shadow(0, 1px, 4px, $blue-100)
  &.bg-white
    color: $blue-100
    background-color: white
    box-shadow(0, 1px, 4px, $blue-0)
  &.bg-green
    color: white
    background-color: $green-100
    box-shadow(0, 1px, 4px, $green-0)
  &:hover
    -webkit-text-decoration: none
    text-decoration: none
    &.bg-navy
      box-shadow(0, 3px, 4px, $blue-0)
    &.bg-blue
      box-shadow(0, 3px, 4px, $blue-100)
    &.bg-white
      box-shadow(0, 3px, 4px, $blue-0)
    &.bg-green
      box-shadow(0, 3px, 4px, $green-0)
  &:active
    &.bg-navy
      box-shadow(0, 0, 4px, $blue-0)
    &.bg-blue
      box-shadow(0, 0, 4px, $blue-100)
    &.bg-white
      box-shadow(0, 0, 4px, $blue-0)
    &.bg-green
      box-shadow(0, 0, 4px, $green-0)

/*===========================
 
 Main content
 
============================*/
header
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 60px
  background-color: white
  z-index: 5000

.header-block
  position: relative
  width: 100%
  max-width: 1100px
  height: 100%
  margin: 0 auto

.logo
  position: absolute
  left: 0
  right: 0
  margin: 5px auto
  width: 50px
  height: 50px
  a
    display: block
    width: 100%
    height: 100%
    color: $black
    
.logo-img
  display: block
  position: absolute
  top: 0
  left: 0
  width: 50px
  height: 50px
  background: url("/images/vote-and-rate.svg")
  background-size: cover

.nav-trigger
  position: absolute
  top: 0
  left: 0
  width: 30px
  height: 100%
  cursor: pointer

.nav-trigger-icon
  position: absolute
  top: 50%
  left: 0
  width: 30px
  height: 3px
  background: $black
  transform(0, -50%, 0)
  &::before, &::after
    content: ""
    position: absolute
    top: 0
    left: 0
    width: 30px
    height: inherit
    background: inherit
    animation(250ms, 0ms)
  &::before
    transform(0, -6px, 0)
  &::after
    transform(0, 6px, 0)

.nav-is-open .nav-trigger-icon
  left: 50%
  width: 3px
  &::before
    transform(-50%, 0, -45deg)
  &::after
    transform(-50%, 0, 45deg)

.lang-selectors
  grid(auto, auto, 15px, start, center, start)
  position: absolute
  top: 0
  left: 90px
  height: 100%
  a
    text-transform: uppercase
    color: $black
    -webkit-text-decoration: underline solid $black
    text-decoration: underline solid $black
    &.en-en, &.ru-ru
      font-weight: bold
      -webkit-text-decoration: none
      text-decoration: none

.signup-in-links
  grid(auto, auto, 15px, start, center, start)
  position: absolute
  top: 0;
  right: 0;
  height: 100%

@media only screen and (max-width: 1100px)
  .nav-trigger
    left: 15px
  .signup-in-links
    right: 15px

@media only screen and (max-width: 450px)
  .logo
    left: 15px
    right: 0
    margin: 5px 0
  .signup-in-links
    display: none
  .nav-trigger
    left: -webkit-calc(100% - 45px)
    left: calc(100% - 45px)


/*========================
  Main
=========================*/
main
  position: relative
  width: 100%
  max-width: 1100px
  height: auto
  margin: 0 auto
  padding: 95px 0 15px 0

@media only screen and (max-width: 1100px)
  main
    padding: 95px 15px 15px 15px
  
section.main-content
  position: relative
  grid(50%, 50%, 15px, start, start)
  width: 100%
  height: auto
  min-height: -webkit-calc(100vh - 110px)
  min-height: calc(100vh - 110px)
  
.site-block
  position: relative
  width: 100%
  height: 100%
