.laptop
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: url("/images/lap.png") left top no-repeat
  background-size: auto 100%

.watch-video-about
  position: absolute
  bottom: 0
  left: 0
  grid(auto, auto, 15px, start, center, start)
  color: $blue-100
  font-size: 1rem
  cursor: pointer
  text-transform: uppercase

.watch-video-about-icon
  width: 30px
  height: 30px
  background: url("/images/youtube.svg") center no-repeat
  background-size: cover


.landing-title
  position: relative
  width: 100%
  h1
    text-transform: uppercase
    font-weight: bold
    font-size: 2rem
    line-height: 2.5rem
    &::after
      content: ""
      position: absolute
      bottom: -35px
      left: 0
      width: 30px
      height: 15px
      background-color: $blue-100

.landing-subtitle
  margin-top: 65px

.landing-btns
  position: relative
  grid(auto, auto, 15px, start, center, start)
  width: 100%
  margin-top: 30px

.find-and-join-vote
  display: block
  position: absolute
  bottom: 0
  right: 0

@media only screen and (max-width: 450px)
  .laptop
    height: 420px
    background-size: 100% auto
  .landing-title
    h1
      font-size: 1.5rem
      line-height: 2rem
      &::after
        bottom: -25px
  .landing-subtitle
    margin-top: 40px